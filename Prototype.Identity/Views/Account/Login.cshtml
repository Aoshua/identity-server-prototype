@model LoginViewModel

<section class="ftco-section">
    <partial name="_ValidationSummary" />

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <h2 class="mb-4 text-center" style="color: #fff;">Identity Prototype</h2>
                    <form asp-route="Login" class="signin-form">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <input asp-for="Username" type="text" class="form-control" placeholder="Username" required autofocus>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" id="password-field" type="password" class="form-control" placeholder="Password" required autocomplete="off">
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <button name="button" value="login" class="form-control btn btn-primary submit px-3">Sign In</button>
                        </div>
                        <div class="form-group d-md-flex">
                            <div class="w-50">
                                @if (Model.AllowRememberLogin)
                                {
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                }
                            </div>
                            <div class="w-50 text-md-right">
                                <a href="#" style="color: #fff">Forgot Password</a>
                            </div>
                        </div>
                    </form>

                    @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
                    {
                        <div class="alert alert-warning">
                            <strong>Invalid login request</strong>
                            There are no login schemes configured for this request.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .alert-danger {
        background-color: #f8d7da5c !important;
    }
</style>
